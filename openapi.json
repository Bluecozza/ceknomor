{
  "openapi": "3.1.0",
  "info": {
    "title": "phone Spam Report API",
    "version": "1.0.0",
    "description": "API untuk lookup nomor, laporan spam, dan batch lookup"
  },
  "servers": [
    { "url": "https://domainmu/api.php" }
  ],
  "paths": {
    "/api.php?action=search": {
      "get": {
        "summary": "Cari nomor telepon",
        "parameters": [
          {
            "name": "query",
            "in": "query",
            "required": true
          }
        ],
        "responses": {
          "200": { "description": "OK" },
          "400": { "description": "Query missing" }
        }
      }
    },
    "/api.php?action=batch_lookup": {
      "post": {
        "summary": "Lookup banyak nomor sekaligus",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "numbers": {
                    "type": "array",
                    "items": { "type": "string" }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "OK" },
          "429": { "description": "Rate limited" }
        }
      }
    }
  }
}
